generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  TEACHER
  STUDENT
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String
  registration Int
  birth_date   DateTime
  user_type    UserType @default(STUDENT)
  created_at   DateTime @default(now())
}
